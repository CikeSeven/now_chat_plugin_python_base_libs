{
  "id": "now_chat_plugin_python_base_libs",
  "name": "Python 基础库插件",
  "author": "NowChat",
  "description": "为 NowChat 提供 Python 基础依赖与 Python 代码执行工具（requirements 动态安装）。",
  "version": "0.1.0",
  "type": "python",
  "requirements": [
    "numpy",
    "pandas"
  ],
  "pythonNamespace": "python_base_ui",
  "providesGlobalPythonPaths": true,
  "permissions": [
    "tool:*",
    "hook:*"
  ],
  "packages": [
    {
      "id": "python_base_bundle",
      "name": "Python Base Bundle",
      "description": "基础插件主包（仅脚本与 UI，不再内置第三方库）。",
      "version": "0.1.0",
      "targetDir": ".",
      "pythonPathEntries": [
        "."
      ]
    }
  ],
  "tools": [
    {
      "name": "python_exec",
      "description": "执行轻量 Python 代码并返回 stdout/stderr（不适合长时或重负载任务）。",
      "runtime": "python_script",
      "scriptPath": "tools/python_exec.py",
      "enabledByDefault": true,
      "timeoutSec": 20,
      "outputLimit": 12000,
      "parameters": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "要执行的轻量 Python 代码。"
          },
          "timeout_sec": {
            "type": "integer",
            "minimum": 1,
            "maximum": 90,
            "description": "执行超时秒数。"
          }
        },
        "required": [
          "code"
        ]
      }
    }
  ],
  "hooks": [
    {
      "event": "app_start",
      "runtime": "python_script",
      "scriptPath": "hooks/app_start.py",
      "priority": 5
    }
  ]
}
